@model Bike.Models.ViewModel.ModelViewModel
@using Bike.Extensions
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="text-info">Edit Model of vehicle</h2>
<form method="post" action="Edit">
    <input hidden asp-for="Model.Id"/>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>

        <div class="col-4">
            <select asp-for="Model.MakeFk" asp-items="Model.Makes.ToSelectListItem()" class="form-control">
            </select>
        </div>

    </div>

    <div class="form-group row">


        <div class="col-4">
            <label asp-for="Model.Name"></label>
            <input asp-for="Model.Name" class="form-control" />
        </div>
    </div>



    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>

</form>
